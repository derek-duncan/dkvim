"Formatting options
  "Set up colorscheme
    colorscheme hybrid_material
    set background=dark
    set guifont=Roboto_Mono:h18
  set ignorecase
  set smartcase
  set cursorline
  set linespace=4
  set number
  "Indentation
    "tabstops and shiftwidth
      set ts=2
      set sw=2
      set shiftwidth=2
      set softtabstop=2
    "expandtab
      "converts tabs to spaces
      set expandtab

"GUI options
  set encoding=utf-8
  syntax on
  filetype on
  set guioptions-=T " Removes top toolbar
  set guioptions-=r " Removes right hand scroll bar
  set go-=L " Removes left hand scroll bar
"Indentation
  set autoindent
  filetype indent on
